<resources>

    <!-- Base application theme. -->
    <style name="BlinqTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:buttonStyle">@style/BlinqDefaultButton</item>
        <item name="android:buttonStyleToggle">@style/BlinqDefaultToggleButton</item>
        <item name="android:seekBarStyle">@style/BlingDefaultSeekBar</item>
    </style>
    <style name="BlingDefaultSeekBar">
        <item name="android:progressDrawable">@drawable/blinq_progress</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:thumb">@drawable/blinq_progress_thumb</item>

    </style>


    <style name="BlinqDefaultButton">
        <item name="android:background">@drawable/default_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@drawable/default_button_text_color</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/blinq_white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="BlinqDefaultToggleButton" parent="BlinqDefaultButton">
        <item name="android:background">@drawable/default_toggle_button</item>

    </style>
</resources>
