<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blinq_background_light_grey_eeeeee"
            android:orientation="vertical"
            android:padding="15dp">


            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                class="ch.dreipol.android.blinq.ui.textviews.SemiBoldTextView"
                android:id="@+id/view"
                android:text="Search Distance"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <SeekBar
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekB2ar2"
                    android:layout_gravity="center_horizontal"/>

                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="ch.dreipol.android.blinq.ui.textviews.RegularTextView"
                    android:id="@+id/vie12w2"
                    android:text="km"/>
            </LinearLayout>


            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                class="ch.dreipol.android.blinq.ui.textviews.SemiBoldTextView"
                android:id="@+id/view1232"
                android:text="Age"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <view
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    class="ch.dreipol.android.blinq.ui.textviews.RegularTextView"
                    android:id="@+id/view1"
                    android:text="from"/>

                <SeekBar
                    android:progress="0"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar2"
                    android:layout_gravity="center_horizontal"/>

                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="ch.dreipol.android.blinq.ui.textviews.RegularTextView"
                    android:id="@+id/view2"
                    android:text="15"/>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <view
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    class="ch.dreipol.android.blinq.ui.textviews.RegularTextView"
                    android:id="@+id/view3"
                    android:text="to"/>

                <SeekBar
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar22"
                    android:layout_gravity="center_horizontal"/>

                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    class="ch.dreipol.android.blinq.ui.textviews.RegularTextView"
                    android:id="@+id/view4"
                    android:text="15"/>
            </LinearLayout>

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                class="ch.dreipol.android.blinq.ui.textviews.SemiBoldTextView"
                android:id="@+id/view123"
                android:text="Interest"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ToggleButton
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Males"
                    android:id="@+id/toggleButton"
                    android:checked="false"/>

                <ToggleButton
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Females"
                    android:id="@+id/toggleButton2"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <ToggleButton
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Both"
                    android:id="@+id/toggleButton3"
                    android:checked="false"/>
            </LinearLayout>

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                class="ch.dreipol.android.blinq.ui.textviews.SemiBoldTextView"
                android:id="@+id/view111223"
                android:text="Vibration"/>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ToggleButton
                    android:layout_width="80dp"
                    android:background="@drawable/default_switch_left_button"
                    android:layout_height="wrap_content"
                    android:text="On"
                    android:id="@+id/toggleButton212"
                    android:checked="true"/>

                <ToggleButton
                    android:layout_width="80dp"
                    android:background="@drawable/default_switch_right_button"
                    android:layout_height="wrap_content"
                    android:text="Off"
                    android:id="@+id/toggleButton33"
                    android:checked="false"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>