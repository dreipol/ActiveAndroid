<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.dreipol.android.blinq.ui.fragments.PrivacyDisclaimer"
    android:orientation="vertical"
    android:background="@color/blinq_background_almost_black_2f2f2f">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/close_button"
            android:src="@drawable/icon_round_close_standard"
            android:baselineAlignBottom="false"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tutorialInfoTitle"
            android:id="@+id/textView"
            android:gravity="center"
            android:textColor="@color/blinq_white"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/icon_security_white"
            android:layout_gravity="center"
            android:layout_margin="20dp" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            class="ch.dreipol.android.blinq.ui.SeperatorView"
            android:id="@+id/view2" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tutorialInfoText1"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/blinq_white"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            class="ch.dreipol.android.blinq.ui.SeperatorView"
            android:id="@+id/view3" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tutorialInfoText2"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/blinq_white"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            class="ch.dreipol.android.blinq.ui.SeperatorView"
            android:id="@+id/view4" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tutorialInfoText3"
            android:id="@+id/tutorialInfoText3"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/blinq_white"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            class="ch.dreipol.android.blinq.ui.SeperatorView"
            android:id="@+id/view5" />

    </LinearLayout>

    <view
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        class="com.facebook.widget.LoginButton"
        android:id="@+id/login_button"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
