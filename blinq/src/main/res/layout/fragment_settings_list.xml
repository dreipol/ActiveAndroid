<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/blinq_background_very_dark_grey_383838"
              android:weightSum="1">

    <ch.dreipol.android.blinq.ui.buttons.SettingsButton
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        app:buttonText="@string/hiOrBye"
        app:buttonTextColor="@color/blinq_white"
        app:leftImage="@drawable/icon_menu_main_standard"
        android:id="@+id/home"
        android:layout_gravity="center_horizontal"/>

    <ch.dreipol.android.blinq.ui.buttons.SettingsButton
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        app:buttonText="@string/matchesTitle"
        app:buttonTextColor="@color/blinq_white"
        app:leftImage="@drawable/icon_menu_match_standard"
        android:id="@+id/matches"
        android:layout_gravity="center_horizontal"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <ch.dreipol.android.blinq.ui.buttons.SettingsButton
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        app:buttonText="@string/profile"
        app:buttonTextColor="@color/blinq_white"
        app:leftImage="@drawable/icon_menu_profile_standard"
        android:id="@+id/profile"
        android:layout_gravity="center_horizontal"/>

    <ch.dreipol.android.blinq.ui.buttons.SettingsButton
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        app:buttonText="@string/search"
        app:buttonTextColor="@color/blinq_white"
        app:leftImage="@drawable/icon_menu_searchsettings_standard"
        android:id="@+id/settings"
        android:layout_gravity="center_horizontal"/>

    <ch.dreipol.android.blinq.ui.buttons.SettingsButton
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        app:buttonText="@string/help"
        app:buttonTextColor="@color/blinq_white"
        app:leftImage="@drawable/icon_menu_help_standard"
        android:id="@+id/help"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>