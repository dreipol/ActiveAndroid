<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="ch.dreipol.android.blinq.ui.activities.FacebookPhotoPickerActivity"
                android:background="@color/blinq_white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:id="@+id/header"
        android:background="@color/blinq_background_very_dark_grey_383838">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:id="@+id/cancel_button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/blinq_delete_account_button"
            android:layout_marginLeft="10dp"/>

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="ch.dreipol.android.blinq.ui.textviews.AVMTextView"
            android:id="@+id/header_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/cancel_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="22sp"
            android:textColor="@color/blinq_white"
            android:text="Choose Something"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:gravity="left"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/picker_container"
        android:layout_below="@+id/header"/>

</RelativeLayout>
