buildscript {
    repositories {
        mavenCentral()
    }
    dependencies {
        classpath 'com.android.tools.build:gradle:0.12.+'
    }
}


apply plugin: 'com.android.application'

repositories {
    mavenCentral()
    maven { url 'http://files.couchbase.com/maven2/' }
    mavenLocal()
}


android {
    compileSdkVersion 19
    buildToolsVersion '19.1.0'



    defaultConfig {
        minSdkVersion 14
        targetSdkVersion 19
        versionCode 1
        versionName "1.0"
    }

    productFlavors {

        production {
            applicationId = "ch.dreipol.android.blinq"
        }

        beta {
            applicationId = "ch.dreipol.android.blinqtest"
        }
    }


    buildTypes {
        release {
            runProguard false
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.txt'
        }
    }
    packagingOptions {
        exclude 'META-INF/ASL2.0'
        exclude 'META-INF/LICENSE'
        exclude 'META-INF/NOTICE'
        exclude '/couchbase-lite-android-1.0.0/res'
    }

    sourceSets {

        production {
            manifest.srcFile 'src/main/AndroidManifestProduction.xml'
        }

        beta {
            manifest.srcFile 'src/main/AndroidManifestBeta.xml'
        }
    }
}

